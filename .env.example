# ===========================================
# ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION CONFIG
# ===========================================

# Application environment (development, staging, production)
VITE_APP_ENV=development

# Application version (automatically set by build process)
VITE_APP_VERSION=1.0.0

# Application name
VITE_APP_NAME=""Rafael Munaro Arquitetura""

# Application description
VITE_APP_DESCRIPTION=""Site institucional para Rafael Munaro Arquitetura""

# ===========================================
# API CONFIGURATION
# ===========================================

# Base API URL
VITE_API_BASE_URL=https://api.rafaelmunaroarquitetura.com

# API timeout in milliseconds
VITE_API_TIMEOUT=10000

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# Google Analytics ID (leave empty to disable)
VITE_GA_ID=

# Google Maps API Key (leave empty to disable)
VITE_GOOGLE_MAPS_API_KEY=

# Email service configuration
VITE_EMAIL_SERVICE_URL=https://api.emailjs.com/api/v1.0/email/send
VITE_EMAIL_SERVICE_ID=
VITE_EMAIL_TEMPLATE_ID=
VITE_EMAIL_USER_ID=

# ===========================================
# SOCIAL MEDIA
# ===========================================

# Social media URLs
VITE_SOCIAL_INSTAGRAM=https://instagram.com/rafaelmunaroarquitetura
VITE_SOCIAL_FACEBOOK=https://facebook.com/rafaelmunaroarquitetura
VITE_SOCIAL_LINKEDIN=https://linkedin.com/company/rafaelmunaroarquitetura

# ===========================================
# CONTACT INFORMATION
# ===========================================

# Contact details
VITE_CONTACT_PHONE=+5511999999999
VITE_CONTACT_EMAIL=contato@rafaelmunaroarquitetura.com
VITE_CONTACT_ADDRESS=""Rua Example, 123 - SÃ£o Paulo, SP""

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable features
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_CONTACT_FORM=true
VITE_FEATURE_PORTFOLIO=true
VITE_FEATURE_BLOG=false

# ===========================================
# DEVELOPMENT
# ===========================================

# Enable debug mode (shows console logs)
VITE_DEBUG=true

# Enable mock data for development
VITE_USE_MOCK_DATA=false

# ===========================================
# BUILD CONFIG
# ===========================================

# Base URL for production (used by Vite)
VITE_BASE_URL=/

